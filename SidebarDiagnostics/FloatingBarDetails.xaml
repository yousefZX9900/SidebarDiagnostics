<Window
    x:Class="SidebarDiagnostics.FloatingBarDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SidebarDiagnostics"
    xmlns:frame="clr-namespace:SidebarDiagnostics.Framework"
    mc:Ignorable="d"
    Title="Details"
    WindowStyle="None"
    ResizeMode="NoResize"
    AllowsTransparency="True"
    Background="Transparent"
    Topmost="True"
    ShowInTaskbar="False"
    Width="280"
    Height="220">
    
    <Window.Resources>
        <!-- Main Container Style -->
        <Style x:Key="DetailsContainer" TargetType="{x:Type Border}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2D2D30" Offset="0"/>
                        <GradientStop Color="#1E1E1E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4A4A4C" Offset="0"/>
                        <GradientStop Color="#3A3A3C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Direction="-90" ShadowDepth="5" Opacity="0.5" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="{x:Type RadioButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8E8E93"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="8,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3C"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <!-- Subtitle Style -->
        <Style x:Key="Subtitle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#8E8E93"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        
        <!-- Metric Row Style -->
        <Style x:Key="MetricRow" TargetType="{x:Type DockPanel}">
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        
        <!-- Metric Label Style -->
        <Style x:Key="MetricLabel" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#8E8E93"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Metric Value Style -->
        <Style x:Key="MetricValue" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ProgressBarStyle" TargetType="{x:Type ProgressBar}">
            <Setter Property="Height" Value="4"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="#3A3A3C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ProgressBar}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="2"/>
                            <Border x:Name="PART_Track" CornerRadius="2"/>
                            <Border x:Name="PART_Indicator" CornerRadius="2" HorizontalAlignment="Left" Background="{TemplateBinding Foreground}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="8">
        <Border Style="{StaticResource DetailsContainer}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Navigation Bar -->
                <Border Grid.Row="0" Background="#252528" CornerRadius="12,12,0,0" Padding="8,6">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- CPU Button - Modern Chip Icon -->
                        <RadioButton x:Name="NavCpu" Style="{StaticResource NavButton}" IsChecked="True" Checked="NavButton_Checked" Tag="CPU" ToolTip="CPU">
                            <Canvas Width="18" Height="18">
                                <!-- Main chip body -->
                                <Rectangle Fill="#3498DB" Width="10" Height="10" Canvas.Left="4" Canvas.Top="4" RadiusX="1.5" RadiusY="1.5"/>
                                <!-- Inner core -->
                                <Rectangle Fill="#2980B9" Width="6" Height="6" Canvas.Left="6" Canvas.Top="6" RadiusX="0.5" RadiusY="0.5"/>
                                <!-- Top pins -->
                                <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="6" Canvas.Top="1"/>
                                <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="8.5" Canvas.Top="1"/>
                                <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="11" Canvas.Top="1"/>
                                <!-- Bottom pins -->
                                <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="6" Canvas.Top="14"/>
                                <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="8.5" Canvas.Top="14"/>
                                <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="11" Canvas.Top="14"/>
                                <!-- Left pins -->
                                <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="1" Canvas.Top="6"/>
                                <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="1" Canvas.Top="8.5"/>
                                <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="1" Canvas.Top="11"/>
                                <!-- Right pins -->
                                <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="14" Canvas.Top="6"/>
                                <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="14" Canvas.Top="8.5"/>
                                <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="14" Canvas.Top="11"/>
                            </Canvas>
                        </RadioButton>
                        
                        <!-- RAM Button - Memory Module Icon -->
                        <RadioButton x:Name="NavRam" Style="{StaticResource NavButton}" Checked="NavButton_Checked" Tag="RAM" ToolTip="RAM">
                            <Grid Width="18" Height="18">
                                <!-- Memory stick base -->
                                <Border Background="#2ECC71" CornerRadius="2" Width="16" Height="10" VerticalAlignment="Center"/>
                                <!-- Memory chips -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Rectangle Fill="#1E8449" Width="2" Height="6" Margin="1,0"/>
                                    <Rectangle Fill="#1E8449" Width="2" Height="6" Margin="1,0"/>
                                    <Rectangle Fill="#1E8449" Width="2" Height="6" Margin="1,0"/>
                                    <Rectangle Fill="#1E8449" Width="2" Height="6" Margin="1,0"/>
                                </StackPanel>
                                <!-- Bottom pins -->
                                <Rectangle Fill="#2ECC71" Width="12" Height="2" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                            </Grid>
                        </RadioButton>
                        
                        <!-- GPU Button - Graphics Card Icon -->
                        <RadioButton x:Name="NavGpu" Style="{StaticResource NavButton}" Checked="NavButton_Checked" Tag="GPU" ToolTip="GPU">
                            <Grid Width="18" Height="18">
                                <!-- Card body -->
                                <Border Background="#E74C3C" CornerRadius="2" Width="16" Height="10" VerticalAlignment="Center"/>
                                <!-- Fan circle -->
                                <Ellipse Fill="#C0392B" Width="6" Height="6" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center"/>
                                <Ellipse Fill="#E74C3C" Width="2" Height="2" HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                <!-- Heat sink lines -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,2,0">
                                    <Rectangle Fill="#C0392B" Width="5" Height="1" Margin="0,0.5"/>
                                    <Rectangle Fill="#C0392B" Width="5" Height="1" Margin="0,0.5"/>
                                    <Rectangle Fill="#C0392B" Width="5" Height="1" Margin="0,0.5"/>
                                </StackPanel>
                                <!-- PCI connector -->
                                <Rectangle Fill="#E74C3C" Width="10" Height="2" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                            </Grid>
                        </RadioButton>
                        
                        <!-- Network Button - WiFi Signal Icon -->
                        <RadioButton x:Name="NavNet" Style="{StaticResource NavButton}" Checked="NavButton_Checked" Tag="NET" ToolTip="Network">
                            <Canvas Width="18" Height="18">
                                <!-- WiFi waves - outer -->
                                <Path Stroke="#9B59B6" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Fill="Transparent">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="2,10" IsClosed="False">
                                                <ArcSegment Point="16,10" Size="7,7" SweepDirection="Counterclockwise"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>
                                <!-- WiFi waves - middle -->
                                <Path Stroke="#9B59B6" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Fill="Transparent">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="5,12" IsClosed="False">
                                                <ArcSegment Point="13,12" Size="4,4" SweepDirection="Counterclockwise"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>
                                <!-- Center dot -->
                                <Ellipse Fill="#9B59B6" Width="3" Height="3" Canvas.Left="7.5" Canvas.Top="14"/>
                            </Canvas>
                        </RadioButton>
                        
                        <!-- Drives Button - Hard Drive Icon -->
                        <RadioButton x:Name="NavDrives" Style="{StaticResource NavButton}" Checked="NavButton_Checked" Tag="DRIVES" ToolTip="Drives">
                            <Grid Width="18" Height="18">
                                <!-- Drive body -->
                                <Border Background="#F39C12" CornerRadius="2" Width="14" Height="10" VerticalAlignment="Center"/>
                                <!-- Disk platter -->
                                <Ellipse Fill="#E67E22" Width="6" Height="6" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center"/>
                                <Ellipse Fill="#F39C12" Width="2" Height="2" HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                <!-- LED indicator -->
                                <Ellipse Fill="#27AE60" Width="2" Height="2" HorizontalAlignment="Right" Margin="0,0,2,0" VerticalAlignment="Center"/>
                                <!-- Connection port -->
                                <Rectangle Fill="#E67E22" Width="6" Height="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,1"/>
                            </Grid>
                        </RadioButton>
                    </StackPanel>
                </Border>
                
                <!-- Content Area -->
                <Border Grid.Row="1" Padding="12,10">
                    <Grid>
                        <!-- CPU Panel -->
                        <StackPanel x:Name="CpuPanel" Visibility="Visible">
                            <TextBlock Text="{x:Static frame:Resources.CPU}" Style="{StaticResource SectionTitle}"/>
                            <TextBlock x:Name="CpuName" Style="{StaticResource Subtitle}"/>
                            
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.CPULoad}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="CpuLoad" Text="--%"  Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <ProgressBar x:Name="CpuLoadBar" Value="0" Maximum="100" Foreground="#3498DB" Style="{StaticResource ProgressBarStyle}"/>
                            
                            <DockPanel Style="{StaticResource MetricRow}" Margin="0,8,0,4">
                                <TextBlock Text="{x:Static frame:Resources.CPUTemp}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="CpuTemp" Text="--°C" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.CPUClock}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="CpuClock" Text="-- MHz" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.CPUFan}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="CpuFan" Text="-- RPM" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                        </StackPanel>
                        
                        <!-- RAM Panel -->
                        <StackPanel x:Name="RamPanel" Visibility="Collapsed">
                            <TextBlock Text="{x:Static frame:Resources.RAM}" Style="{StaticResource SectionTitle}"/>
                            
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.RAMLoad}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="RamLoad" Text="--%"  Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <ProgressBar x:Name="RamLoadBar" Value="0" Maximum="100" Foreground="#2ECC71" Style="{StaticResource ProgressBarStyle}"/>
                            
                            <DockPanel Style="{StaticResource MetricRow}" Margin="0,8,0,4">
                                <TextBlock Text="{x:Static frame:Resources.RAMUsed}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="RamUsed" Text="-- GB" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.RAMFree}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="RamFree" Text="-- GB" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.RAMClock}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="RamClock" Text="-- MHz" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                        </StackPanel>
                        
                        <!-- GPU Panel -->
                        <StackPanel x:Name="GpuPanel" Visibility="Collapsed">
                            <TextBlock Text="{x:Static frame:Resources.GPU}" Style="{StaticResource SectionTitle}"/>
                            <TextBlock x:Name="GpuName" Style="{StaticResource Subtitle}"/>
                            
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.GPUCoreLoad}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="GpuLoad" Text="--%"  Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <ProgressBar x:Name="GpuLoadBar" Value="0" Maximum="100" Foreground="#E74C3C" Style="{StaticResource ProgressBarStyle}"/>
                            
                            <DockPanel Style="{StaticResource MetricRow}" Margin="0,8,0,4">
                                <TextBlock Text="{x:Static frame:Resources.GPUTemp}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="GpuTemp" Text="--°C" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.GPUCoreClock}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="GpuCoreClock" Text="-- MHz" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.GPUVRAMLoad}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="GpuVram" Text="--%"  Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                        </StackPanel>
                        
                        <!-- Network Panel -->
                        <StackPanel x:Name="NetPanel" Visibility="Collapsed">
                            <TextBlock Text="{x:Static frame:Resources.Network}" Style="{StaticResource SectionTitle}"/>
                            <TextBlock x:Name="NetName" Style="{StaticResource Subtitle}"/>
                            
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.NetworkIn}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="NetIn" Text="-- KB/s" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}">
                                <TextBlock Text="{x:Static frame:Resources.NetworkOut}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="NetOut" Text="-- KB/s" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel Style="{StaticResource MetricRow}" Margin="0,8,0,4">
                                <TextBlock Text="{x:Static frame:Resources.NetworkIP}" Style="{StaticResource MetricLabel}"/>
                                <TextBlock x:Name="NetIP" Text="--" Style="{StaticResource MetricValue}" DockPanel.Dock="Right"/>
                            </DockPanel>
                        </StackPanel>
                        
                        <!-- Drives Panel -->
                        <StackPanel x:Name="DrivesPanel" Visibility="Collapsed">
                            <TextBlock Text="{x:Static frame:Resources.Drives}" Style="{StaticResource SectionTitle}"/>
                            <TextBlock x:Name="DriveInfo" Text="Loading..." Style="{StaticResource MetricLabel}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
