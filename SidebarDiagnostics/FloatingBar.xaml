<Window
    x:Class="SidebarDiagnostics.FloatingBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SidebarDiagnostics"
    xmlns:frame="clr-namespace:SidebarDiagnostics.Framework"
    mc:Ignorable="d"
    Title="Floating Bar"
    WindowStyle="None"
    ResizeMode="NoResize"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    Loaded="Window_Loaded"
    Closing="Window_Closing"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    MouseEnter="Window_MouseEnter"
    MouseLeave="Window_MouseLeave"
    SizeToContent="WidthAndHeight">
    
    <Window.Resources>
        <!-- Floating Bar Styles -->
        <Style x:Key="FloatingBarContainer" TargetType="{x:Type Border}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2D2D30" Offset="0"/>
                        <GradientStop Color="#1E1E1E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4A4A4C" Offset="0"/>
                        <GradientStop Color="#3A3A3C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Direction="-90" ShadowDepth="3" Opacity="0.4" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MetricPanel" TargetType="{x:Type StackPanel}">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="MetricIcon" TargetType="{x:Type Viewbox}">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="MetricLabel" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#8E8E93"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,3,0"/>
        </Style>
        
        <Style x:Key="MetricValue" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="28"/>
        </Style>
        
        <Style x:Key="TempValue" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#2ECC71"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
        
        <Style x:Key="Separator" TargetType="{x:Type Border}">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Background" Value="#3A3A3C"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="BarButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="9" Padding="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="9" Padding="3">
                            <Path x:Name="icon" Data="M 0,0 L 8,8 M 8,0 L 0,8" Stroke="#8E8E93" StrokeThickness="1.5" Width="10" Height="10" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E74C3C"/>
                                <Setter TargetName="icon" Property="Stroke" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <!-- Main Floating Bar Container -->
        <Border x:Name="MainContainer" Style="{StaticResource FloatingBarContainer}" 
                Opacity="{Binding Source={x:Static frame:Settings.Instance}, Path=FloatingBarOpacity, Mode=OneWay}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                
                <!-- CPU Section with Temperature -->
                <StackPanel Style="{StaticResource MetricPanel}">
                    <Viewbox Style="{StaticResource MetricIcon}">
                        <Canvas Width="16" Height="16">
                            <!-- Main chip body -->
                            <Rectangle Fill="#3498DB" Width="8" Height="8" Canvas.Left="4" Canvas.Top="4" RadiusX="1" RadiusY="1"/>
                            <!-- Inner core -->
                            <Rectangle Fill="#2980B9" Width="4" Height="4" Canvas.Left="6" Canvas.Top="6"/>
                            <!-- Top pins -->
                            <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="5.5" Canvas.Top="1"/>
                            <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="9" Canvas.Top="1"/>
                            <!-- Bottom pins -->
                            <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="5.5" Canvas.Top="12"/>
                            <Rectangle Fill="#3498DB" Width="1.5" Height="3" Canvas.Left="9" Canvas.Top="12"/>
                            <!-- Left pins -->
                            <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="1" Canvas.Top="5.5"/>
                            <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="1" Canvas.Top="9"/>
                            <!-- Right pins -->
                            <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="12" Canvas.Top="5.5"/>
                            <Rectangle Fill="#3498DB" Width="3" Height="1.5" Canvas.Left="12" Canvas.Top="9"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="CPU" Style="{StaticResource MetricLabel}"/>
                    <TextBlock x:Name="CpuValue" Text="--%" Style="{StaticResource MetricValue}"/>
                    <TextBlock x:Name="CpuTemp" Text="" Style="{StaticResource TempValue}"/>
                </StackPanel>
                
                <Border Style="{StaticResource Separator}"/>
                
                <!-- RAM Section -->
                <StackPanel Style="{StaticResource MetricPanel}">
                    <Viewbox Style="{StaticResource MetricIcon}">
                        <Grid Width="16" Height="16">
                            <Border Background="#2ECC71" CornerRadius="1" Width="14" Height="8" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Rectangle Fill="#1E8449" Width="2" Height="5" Margin="0.5,0"/>
                                <Rectangle Fill="#1E8449" Width="2" Height="5" Margin="0.5,0"/>
                                <Rectangle Fill="#1E8449" Width="2" Height="5" Margin="0.5,0"/>
                                <Rectangle Fill="#1E8449" Width="2" Height="5" Margin="0.5,0"/>
                            </StackPanel>
                        </Grid>
                    </Viewbox>
                    <TextBlock Text="RAM" Style="{StaticResource MetricLabel}"/>
                    <TextBlock x:Name="RamValue" Text="--%" Style="{StaticResource MetricValue}"/>
                </StackPanel>
                
                <Border Style="{StaticResource Separator}"/>
                
                <!-- GPU Section with Temperature -->
                <StackPanel Style="{StaticResource MetricPanel}">
                    <Viewbox Style="{StaticResource MetricIcon}">
                        <Grid Width="16" Height="16">
                            <Border Background="#E74C3C" CornerRadius="1" Width="14" Height="8" VerticalAlignment="Center"/>
                            <Ellipse Fill="#C0392B" Width="5" Height="5" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center"/>
                            <Ellipse Fill="#E74C3C" Width="2" Height="2" HorizontalAlignment="Left" Margin="3.5,0,0,0" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,2,0">
                                <Rectangle Fill="#C0392B" Width="4" Height="1" Margin="0,0.3"/>
                                <Rectangle Fill="#C0392B" Width="4" Height="1" Margin="0,0.3"/>
                                <Rectangle Fill="#C0392B" Width="4" Height="1" Margin="0,0.3"/>
                            </StackPanel>
                        </Grid>
                    </Viewbox>
                    <TextBlock Text="GPU" Style="{StaticResource MetricLabel}"/>
                    <TextBlock x:Name="GpuValue" Text="--%" Style="{StaticResource MetricValue}"/>
                    <TextBlock x:Name="GpuTemp" Text="" Style="{StaticResource TempValue}"/>
                </StackPanel>
                
                <Border Style="{StaticResource Separator}"/>
                
                <!-- Expand/Details Button -->
                <Button x:Name="ExpandButton" Style="{StaticResource BarButton}" Click="ExpandButton_Click" ToolTip="{x:Static frame:Resources.FloatingBarShowDetails}">
                    <Path Data="M 0,0 L 5,5 L 10,0" Stroke="#8E8E93" StrokeThickness="1.5" Width="8" Height="5" Stretch="Uniform"/>
                </Button>

                <!-- Controls Panel (shown on hover) -->
                <StackPanel x:Name="ControlsPanel" Orientation="Horizontal" Visibility="Collapsed">
                    
                    <!-- Pin Button - Proper Thumbtack Design -->
                    <Button x:Name="PinButton" Style="{StaticResource BarButton}" Click="PinButton_Click" ToolTip="Pin/Unpin">
                        <Canvas Width="12" Height="12">
                            <!-- Thumbtack/Pin Icon -->
                            <Path x:Name="PinIcon" Stretch="Uniform" Width="12" Height="12"
                                  Data="M12 2L10 4L10 5L8 7L5 7L4 8L6 10L2 14L3 15L7 11L9 13L10 12L10 9L12 7L13 7L15 5L12 2Z M10.5 4.5L12.5 6.5"
                                  Fill="{Binding PinButtonColor}" Stroke="{Binding PinButtonColor}" StrokeThickness="0.5"/>
                        </Canvas>
                    </Button>

                    <!-- Settings Button -->
                    <Button x:Name="SettingsButton" Style="{StaticResource BarButton}" Click="SettingsButton_Click" ToolTip="{x:Static frame:Resources.ButtonSettings}">
                        <Path Data="M10 3.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0zM10 10a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0zm0 6.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z" 
                              Fill="#8E8E93" Width="10" Height="10" Stretch="Uniform"/>
                    </Button>

                    <!-- Close Button -->
                    <Button x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click" ToolTip="{x:Static frame:Resources.ButtonClose}"/>
                </StackPanel>
                
            </StackPanel>
        </Border>
    </Grid>
</Window>
